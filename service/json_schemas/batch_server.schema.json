{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "https://geopm.github.io/batch_server.schema.json",
    "title": "Configuration for a batch server",
    "type": "array",
    "items": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "domain_type": {
          "type": "integer"
        },
        "domain_idx": {
          "type": "integer"
        },
        "is_write": {
          "type": "bool"
        }
      },
      "required": ["name", "domain_type", "domain_idx", "is_control"],
      "additionalProperties": false
    }
}
